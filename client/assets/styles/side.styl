.com-side,
.com-side-scroll
  width 180px

.com-side
  position absolute
  top 80px
  bottom 0
  font-size 15px
  background-color #393d49
  overflow-x hidden

.com-side-scroll
  height 100%

.com-list-nav
  width 100%
  height 50px
  line-height 50px


.com-list-item a
  position relative
  display block
  padding 0 12px 0 20px
  color #eee
  span
    position absolute
    left 0
    top 0
    width 5px
    height 50px
    background-color #009688
    opacity 0
    transition: opacity .5s ease

.com-list-item a:hover
  background-color rgba(95, 96, 102, .3)
  span
   opacity .9

.com-list-item .side-nav-active span
  opacity .9
